<div class="container">

  <div class="row">
    <div class="col-lg-3 offset-lg-2" >
      <h2 class="my-5 px-2 rounded-circle", style="background:#EEEEEE; text-align:center;">ログイン</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-7 offset-lg-2" >
      <div class="row justify-content-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <table class="table table-borderless">
          <tbody>
            <tr>
              <th class="font-weight-normal"><%= f.label :"メールアドレス" %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>"40" %></td>
            </tr>
            <tr>
              <th class="font-weight-normal"><%= f.label :"パスワード" %></th>
              <td><%= f.password_field :password, autocomplete: "current-password",:size=>"40" %></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <% if devise_mapping.rememberable? %>
                  <div>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
              </td>
            </tr>
            <tr>
              <th></th>
              <td><%= f.submit "ログイン",class:'btn btn-primary mt-1 px-5' %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4 offset-lg-2" >
      <h3 class="my-2 px-2 rounded-circle", style="background:#EEEEEE; text-align:center;">会員登録が</br>お済みでない方</h3>
    </div>
    <div class="mt-4"><%= link_to "こちら", new_guest_registration_path, data: {"turbolinks" => false} %>から新規登録を行ってください。</div>
    </div>
  </div>

</div>

