<div class="container">
  <div class="row">
    <div class="col-lg-3 offset-lg-2" >
      <h2 class="my-5 px-2 rounded-circle", style="background:#EEEEEE; text-align:center;"> 新規会員登録 </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8 offset-lg-2" >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
      <%= render "guests/shared/error_messages", resource: resource %>

    <table class="table table-borderless">
      <tbody>
        <tr>
          <th class="font-weight-normal">お名前</th>
          <td><%= f.text_field :name, autofocus: true %></td>
        </tr>
        <tr>
          <th class="font-weight-normal">メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th class="font-weight-normal">郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code, autofocus: true %></td>
        </tr>
        <tr>
          <th class="font-weight-normal">住所</th>
          <td colspan="2"><%= f.text_field :address, autofocus: true, :size=>"50" %></td>
        </tr>
        <tr>
          <th class="font-weight-normal">電話番号(ハイフンなし)</th>
          <td><%= f.text_field :phone_number, autofocus: true %></td>
        </tr>
        <tr>
          <th class="font-weight-normal">パスワード(6⽂字以上)</th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th class="font-weight-normal">パスワード(確認⽤)</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "新規登録",class: 'btn btn-success mt-2 px-5' %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
  </div>
</div>

  <div class="row">
    <div class="col-lg-4 offset-lg-2" >
      <h2 class="my-2 px-2 rounded-circle", style="background:#EEEEEE; text-align:center;">既に登録済みの方</h2>
    </div>
    <div class="mt-3"><%= link_to "こちら", new_guest_session_path %>からログインしてください</div>
    </div>
  </div>

</div>


