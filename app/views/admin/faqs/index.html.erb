<div class="container my-5">
  <div class="row">
    <div class="col-md-3 text-center">
			<h2 style="background:#EEEEEE;" class="rounded-circle">Q＆A一覧</h2>
		</div>
  </div>

<div class="row text-right">
    <%= link_to "+", new_admin_faq_path, class: "btn-danger btn-outline-light btn-lg rounded-circle text-right ml-auto shadow-sm" %>
  </div>

  <div class="row mt-4">
    <table class="table table-hover text-center">
      <thead style="background:#fffacd;">
        <% @faqs.each do |faqs| %>
          <tr>
            <th>ID</th>
            <td>
            <%= faqs.id %>
            <%= link_to " 編集する", edit_admin_faq_path(faqs), class: "btn btn-success rounded-pill px-4 ml-3" %>
            </td>
          </tr>
          <tr>
            <th>Question</th>
            <td><%= faqs.question %></td>
          </tr>
          <tr>
            <th class="pb-5">Answer</th>
            <td><%= faqs.answer %></td>
          </tr>
        <% end %>
      </thead>
      </table>
    </div>
  </div>