<div class="container">

  <div class="row">
    <div class="col-lg-6" >
      <h2 class="cp_h2countrytitletitlenew">国の新規登録</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-10 offset-lg-1" >

      <%= form_with model: @country, url:admin_countries_path, local:true do |f| %>
      <table class="table table-borderless">
        <%= render 'layouts/errors', obj: @country %>
        <tbody>
            <tr>
             <td>イメージ画像</td>
             <td><%= f.attachment_field :image %></td>
            </tr>
            <tr>
              <td>国名</td>
              <td><%= f.text_field :country_name, class: "form-control", placeholder: "アメリカ" %></td>
            </tr>
            <tr>
              <td>首都</td>
              <td><%= f.text_field :capital, class: "form-control", placeholder: "ワシントンD.C" %></td>
            </tr>
            <tr>
              <td>人口(人)</td>
              <td><%= f.text_field :country_population, class: "form-control", placeholder: "120万" %></td>
            </tr>
             <!--numberfieldだと多い分大変-->
            <tr>
              <td>言語</td>
              <td><%= f.text_field :language, class: "form-control", placeholder: "英語" %></td>
            </tr>
            <tr>
              <td>通貨</td>
              <td><%= f.text_field :currency, class: "form-control", placeholder: "USドル" %></td>
            </tr>
            <tr>
              <td>国の紹介</td>
              <td><%= f.text_area :introduction, class: "form-control",
              placeholder: "200文字以上300文字以内" %></td>
            </tr>
            <tr>
              <td>
              <%= f.submit "新規登録", class: "btn btn-success rounded-pill" %>
              </td>
            </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>

</div>