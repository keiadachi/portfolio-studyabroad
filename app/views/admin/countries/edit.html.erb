<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
       <%= form_with model: @country, url:admin_country_path, local:true do |f| %>
      <table class="table table-borderless">
        <h2>国の編集</h2>
        <tbody>
            <tr>
             <td>国の画像</td>
             <td><%= f.attachment_field :image %></td>
            </tr>
            <tr>
              <td>国名</td>
              <td><%= f.text_field :country_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>首都</td>
              <td><%= f.text_field :capital, class: "form-control" %></td>
            </tr>
            <tr>
              <td>人口</td>
              <td><%= f.text_field :country_population, class: "form-control" %></td>
            </tr>
            <tr>
              <td>言語</td>
              <td><%= f.text_field :language, class: "form-control" %></td>
            </tr>
            <tr>
              <td>通貨</td>
              <td><%= f.text_field :currency, class: "form-control" %></td>
            </tr>
            <tr>
              <td>説明</td>
              <td><%= f.text_area :introduction, class: "form-control" %></td>
            </tr>
              <td>
              <%= f.submit "変更を保存", class: "btn btn-success rounded-pill" %>
              </td>
            </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>