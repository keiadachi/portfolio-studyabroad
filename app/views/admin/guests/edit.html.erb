<div class="container">
  
  <div class="row">
    <div class="col-lg-5 offset-lg-2 mt-3" >
      <h2 class="cp_h2title"><%= @guest.name %>さんの会員情報編集 </h2>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-7 offset-lg-3 mt-3">

      <%= render 'layouts/errors', obj: @guest %>

      <%= form_with(model:@guest, url:admin_guest_path, local: true ,method: :patch) do |f| %>
        <div class="form-group">
          <%= f.label :会員id %>
          <%= f.label :"#{@guest.id}" %>
        </div>
        <div class="form-group">
          <%= f.label :氏名 %>
          <div class="row">
            <%= f.text_field :name, class: "form-control offset-1 col-4"%>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code, class: "form-control offset-1 col-4"%>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "form-control offset-1 col-10"%>
        </div>
        <div class="form-group">
          <%= f.label :電話番号 %>
          <%= f.text_field :phone_number, class: "form-control offset-1 col-4"%>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control offset-1 col-4"%>
        </div>
        <div class="form-group">
          <%= f.label :会員ステータス %>
            <%= f.radio_button :guest_status, true %>
          　<%= f.label :guest_status, "有効" %>
          　<%= f.radio_button :guest_status, false %>
          　<%= f.label :guest_status, "退会" %>
        </div>
        <div class="actions ml-5">
          <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6 rounded-pill"%>
        </div>
      <% end %>
      
    </div>
  </div>