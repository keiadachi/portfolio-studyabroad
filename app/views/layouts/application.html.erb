<!DOCTYPE html>
<html>
  <head>
    <title>Studyabroad</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body class="d-flex flex-column">
    <div class="wrapper">

    <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if guest_signed_in? %>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_guest_session_path, method: :delete, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to 'About us', homes_about_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to 'マイページ', guest_path(current_guest.id), class: 'nav-link text-dark' %>
        </li>

        <% elsif admin_signed_in? %>
          <li>
            <%= link_to "国一覧", admin_countries_path, class: "nav-link text-dark btn btn-outline-dark mr-2" %>
          </li>
          <li>
            <%= link_to "都市一覧", admin_cities_path, class: "nav-link text-dark btn btn-outline-dark mr-2" %>
          </li>
          <li>
            <%= link_to "語学留学⼀覧", admin_schools_path, class: "nav-link text-dark btn btn-outline-dark mr-2" %>
          </li>
          <li>
            <%= link_to "パンフレット⼀覧", admin_brochures_path, class: "nav-link text-dark btn btn-outline-dark mr-2" %>
          </li>
          <li>
            <%= link_to "Q＆A⼀覧", admin_faqs_path, class: "nav-link text-dark btn btn-outline-dark mr-2" %>
          </li>
          <li>
            <%= link_to "お客様⼀覧", admin_guests_path, class: "nav-link text-dark btn btn-outline-dark mr-2" %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link text-dark btn btn-outline-dark mr-2" %>
          </li>

        <% else %>
        <li class="nav-item">
          <%= link_to "新規登録", new_guest_registration_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to "会員ログイン", guest_session_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to "管理者ログイン", admin_session_path, class: 'nav-link text-dark' %>
        </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>


  <main>
    <%= yield %>
  </main>

  <footer class="footertext">
        <p>© All rights reserved by RyugakuCenter.</p>
      </footer>


    </div>
</body>

</html>
